<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to mContext particular API-level can go here. -->
    </style>

    <style name="PagerTitleStripText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#a4c639</item>
        <item name="android:shadowColor">#44000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="qq">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">#00000088</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="editor">
        <item name="android:padding">12dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">#00000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="DisableSoundEffects">
        <item name="android:soundEffectsEnabled">false</item>
    </style>



    <!-- toolbar -->
    <style name="ToolBarApp.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolBarApp.App" parent="ToolBarApp.Base">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title.App</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title.App" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#55000000</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>